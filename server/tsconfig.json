{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],

  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "module": "commonjs",
    "target": "esnext",
    "types": ["node"],
    "esModuleInterop": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true
  }
}